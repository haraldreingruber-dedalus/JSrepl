{
    "env": {
        "browser": true,
        "es6": true,
        "amd" : true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-cond-assign": "error",
        "no-console": "off"
    }
}